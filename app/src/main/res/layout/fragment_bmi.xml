<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/gray_light"
                android:fontFamily="@font/nanum_barun_pen_b"
                android:padding="10dp"
                android:text="â— Measure BMI"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <include layout="@layout/bmi_height_weight" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/gray_light"
                android:fontFamily="@font/nanum_barun_pen_b"
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/bmi_result1"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/gray_light"
                android:fontFamily="@font/nanum_barun_pen_b"
                android:padding="10dp"
                android:gravity="center"
                android:text="@string/bmi_result2"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/bmi_button1"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_margin="10dp"
                android:src="@drawable/bmi1"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/bmi_button2"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_margin="10dp"
                android:src="@drawable/bmi2"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/bmi_button3"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_margin="10dp"
                android:src="@drawable/bmi3"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/bmi_button4"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_margin="10dp"
                android:src="@drawable/bmi4"
                app:riv_mutate_background="true"
                app:riv_oval="false" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/hellschedule_logo1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>