<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/trail_menu1"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/trail_1"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/trail_menu2"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/trail_2"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/trail_menu3"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/trail_3"
                app:riv_mutate_background="true"
                app:riv_oval="false" />
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/trail_menu4"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:riv_corner_radius="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/trail_4"
                app:riv_mutate_background="true"
                app:riv_oval="false"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>